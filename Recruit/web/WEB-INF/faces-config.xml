<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0"
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    <application>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>sv</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>andlin.recruit.locale.messages</base-name>
            <var>msgs</var>
        </resource-bundle>	
    </application>
    
    <navigation-rule>
        <from-view-id>/apply/register.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{registrationManager.newPerson}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/apply/register2.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{registrationManager.newPerson}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/apply/register.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/apply/register2.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{registrationManager.doneAddCompetence}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/apply/register3.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{registrationManager.doneAddCompetence}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/apply/register2.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
        <navigation-rule>
        <from-view-id>/apply/register3.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{registrationManager.doneAddAvailability}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/apply/register4.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{registrationManager.doneAddAvailability}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/apply/register2.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
</faces-config>